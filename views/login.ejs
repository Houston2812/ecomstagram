<body>
	<div class="container-contact100">
		<div class="wrap-contact100">
			<form  action="/login" method="POST"  id="login"  class="contact100-form validate-form">
				<span class="contact100-form-title">
					Login Form
				</span>

                <% if (locals.is_logged == false) { %>

				<p style="color: red;">* Wrong</p>

                <% } %>

                <label class="label-input100" for="username">Enter your username *</label>
				<div class="wrap-input100">
					<input id="username" class="input100" type="text" name="username" placeholder="Username">
					<span class="focus-input100"></span>
				</div>

				<label class="label-input100" for="passw">Enter your password *</label>
				<div class="wrap-input100">
					<input id="passw" class="input100" type="password" name="passw" placeholder="********">
					<span class="focus-input100"></span>
				</div>

				<div class="container-contact100-form-btn">
					<input type="submit" id="confirm" class="contact100-form-btn" value="Confirm">
					
				</div>
                <a href="/" class="container-contact100-form-btn">
                    Back
                </a>
			</form>

			<div class="contact100-more flex-col-c-m" style="background-image: url('../public/images/bg-01.jpg');">
				<div class="flex-w size1 p-b-47">
					<div class="txt1 p-r-25">
						<span class="lnr lnr-map-marker"></span>
					</div>

					<div class="flex-col size2">
						<span class="txt1 p-b-20">
							Address
						</span>

						<span class="txt2">
							BHOS Campus
                            Sabail district, Yeni Salyan way 3-rd km. 
                            "25", Baku, Azerbaijan
						</span>
					</div>
				</div>

				<div class="dis-flex size1 p-b-47">
					<div class="txt1 p-r-25">
						<span class="lnr lnr-phone-handset"></span>
					</div>

					<div class="flex-col size2">
						<span class="txt1 p-b-20">
							Telephone
						</span>

						<span class="txt3">
							+994 12 521 33 63
						</span>
					</div>
				</div>

				<div class="dis-flex size1 p-b-47">
					<div class="txt1 p-r-25">
						<span class="lnr lnr-envelope"></span>
					</div>

					<div class="flex-col size2">
						<span class="txt1 p-b-20">
							Ask for Support
						</span>

						<span class="txt3">
							<a href="mailto:info@bhos.edu.az">
                                <span  style="color: white; text-decoration: underline;">info@bhos.edu.az </span>

                                </a>
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>




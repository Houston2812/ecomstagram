<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

        <style>
            .temp{
                white-space: pre-line;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h2 class="mt-3">Orders</h2>
            <a href="/users/">
                <button type="button" class="btn btn-primary btn-sm mt-3">Back to Profile</button>
            </a>
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th scope="col"> Payment Detail </th>
                        <th scope="col"> Payment Total </th>
                        <th scope="col"> Payment Date </th>
                    </tr>
                </thead>
                <tbody>
                    <% order_history.forEach( (item, index) => { %>
                        <tr>
                            <td class="temp"> <%= item.payment_detail %> </td>
                            <td> <%= item.payment_total %>$ </td>
                            <td> <%= item.payment_date %> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

        </div>
    </body>
</html>